<div class="mt-4">
    <h3>Sua khoa hoc</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">ten khoa hoc</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="desc" class="form-label">Mo ta khoa hoc</label>
            <textarea class="form-control" id="desc" name="desc" >{{course.desc}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">videoID</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">trinh do</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level">
        </div>
       
        <button type="submit" class="btn btn-primary">Luu lai</button>
    </form>
</div>